{
	"name": "ct-poc",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
    "lint:fix": "turbo run lint:fix",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-format": "prettier --check \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"@repo/eslint-config": "*",
		"@repo/typescript-config": "*",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@9.6.7",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
